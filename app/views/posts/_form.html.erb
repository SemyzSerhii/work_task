<%= form_for @post do |f| %>
  <div class="size">
    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">New headline</label>
        <%= f.text_field :title , required: true, class: 'form-control borders' %>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">body</label>
        <%=f.text_area :body , required: true, size: '60x12', class: 'form-control borders' %>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
<% end %>
